{% extends 'base.html.twig' %}

{% block title %}Ajout de Stagiaire{% endblock %}

{% block body %}

<style>
body {
    background-color: #001387;
}

.container {
    padding: 10px;
}

label,
p {
    color: black;
}

h1 {
    color: black;
    margin-left: 20%;
}

.inscriptionContainer {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-top: 50px;
}

.cadre {
    background-color: white;
    padding: 20px;
    border-radius: 10px;
}

input[type=text],
input[type=password],
input[type=number] {
    font-family: Arial;
    width: 250px;
    border-radius: 5px;
    height: 30px;
    padding: 5px;
    margin: 10px;
    display: inline-block;
    border: 1px solid black;
}

input[type=text]:focus,
input[type=password]:focus,
input[type=number]:focus {
    outline: none;
}

hr {
    border: 1px solid #f1f1f1;
    margin-bottom: 25px;
}

.registerbtn {
    font-family: Arial;
    font-weight: bold;
    background-color: black;
    color: white;
    padding: 10px 20px;
    margin: 10px auto;
    display: block;
    border: none;
    cursor: pointer;
    border-radius: 10px;
    opacity: 0.9;
}

.registerbtn:hover {
    opacity: 1;
}

a {
    color: white;
}

.goToConnexion {
    color: white;
    text-align: center;
    margin-top: 20px;
}

.connexionLink {
    color: white;
    font-weight: bold;
}
</style>

<div class="inscriptionContainer">
    <div class="cadre">
        <h1>Ajout de stagiaire</h1>
        {{ form_start(stagiaireForm) }}
        <div class="emailContainer">
            {{ form_row(stagiaireForm.Email) }}
        </div>
        <div class="nomContainer">
            {{ form_row(stagiaireForm.Nom) }}
        </div>
        <div class="prenomContainer">
            {{ form_row(stagiaireForm.Prenom) }}
        </div>
        <div class="profilContainer">
            {{ form_row(stagiaireForm.Profil, {
                label: 'Certification souhaitée'
            }) }}
        </div>
        <button type="submit" class="registerbtn">Ajouter</button>
        {{ form_end(stagiaireForm) }}
        <a href="{{ path('app_liste') }}">Retour à la liste</a>
    </div>
</div>

{% endblock %}
