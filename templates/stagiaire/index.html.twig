{% extends 'base.html.twig' %}

{% block title %}Ajout de Stagiaire{% endblock %}

{% block body %}

<style>
body {
    background-color : #001387;
}

.container {
  padding: 16px;
}

label,h1 {
    color : white;
    font-family: Arial;
}

input[type=text] {
  width: 20%;
  border-radius: 10px;
  height: 5px;
  font-family: Arial;
  padding: 15px;
  margin: 10px;
  display: inline-block;
  border: none;  
}


input[type=text]:focus, input[type=password]:focus {
  outline: none;
}

.registerbtn {
  background-color: #FFFF;
  color: #001387;
  padding: 16px 20px;
  margin: 8px 0;
  border: none;
  cursor: pointer;
  font-family: Arial;
  border-radius: 15px;
  margin-left: 60px;
  margin-top: 20px;
  width: 250px;
  opacity: 0.9;
}

.registerbtn:hover {
  opacity:1;
}

a {
  color : white;
}

.emailContainer {
  margin-left: 45px;
}

.nomContainer {
  margin-left: 52px;
}

.prenomContainer {
  margin-left: 35px;
}

form {
  margin-left: 37%;
  margin-top: 40px;
}

button {
  font-weight: bold;
}

.profilContainer {
  margin-left: -70px;
}
</style>


<h1 style="text-align:center">Ajout de stagiaire</h1>
        <div class="form">
        {{ form_start(stagiaireForm) }}
        <div class="emailContainer">
        {{ form_row(stagiaireForm.Email) }}
        </div>
        <div class="nomContainer">
        {{ form_row(stagiaireForm.Nom) }}
        </div>
        <div class="prenomContainer">
        {{ form_row(stagiaireForm.Prenom) }}
        </div>
        <div class="profilContainer">
        {{ form_row(stagiaireForm.Profil, {
            label: 'Certification souhaitée'
        }) }}
        </div>
        <button type="submit" class="registerbtn">Ajouter</button>
    {{ form_end(stagiaireForm) }}
    <a href="{{path('app_liste')}}">Retour à la liste</a>
</div>
{% endblock %}